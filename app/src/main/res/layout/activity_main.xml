<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">


    <LinearLayout
        android:id="@+id/layout_btnChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/btnBotPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/orange_dracula"

            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            android:text="@string/nguoi_may"
            android:textColor="@color/bg_color"
            android:textSize="20sp"
             />

        <Button
            android:id="@+id/btnBotBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="32dp"

            android:layout_marginTop="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/cyan_dracula"

            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            android:text="@string/may_may"
            android:textColor="@color/bg_color"
            android:textSize="20sp"
            />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>